<h1 class="text-center mt-4">Roles</h1>

<div class="flickr_pagination">
  <%= will_paginate @roles, :container => false %>
</div>

<div class="container">
  <% @roles.each do |role| %>
    <div class="row justify-content-md-center">
      <div class="col-4 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to role.name, role_path(role), class: "text-success" %></h5>
            <p class="card-text"><%= pluralize(role.books.count, "book") %></p>
          </div>
          <div class="card-footer text-muted">
            <small>Added <%= time_ago_in_words(category.added_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="flickr_pagination mb-4">
  <%= will_paginate @roles, :container => false %>
</div>